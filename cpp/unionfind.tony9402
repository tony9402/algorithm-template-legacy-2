/* Union Find Template */
vector<int> uf(N, -1);
auto find = [&](int x, auto &self) -> void { return uf[x] < 0 ? x : uf[x] = self(uf[x]); };
auto merge = [&](int a, int b) -> bool { 
    a = find(a); b = find(b);
    if(a == b)return false;
    uf[b] = a;
    return true;
};
auto same = [&](int a, int b) -> bool { return find(a) == find(b); };
